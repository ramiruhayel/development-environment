
{
  "name": "Node.js",
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "VARIANT": "14" }
  },

  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },

  "runArgs": ["--env-file", ".devcontainer/devcontainer.env"],

  "mounts": [
    "source=ABSOLUTE_PATH_TO_BOOTCAMP_RESOURCES_DIRECTORY,target=/workspaces/development-environment/bootcamp-resources,type=bind,consistency=cached"
  ],

  "workspaceFolder": "/workspaces/development-environment/bootcamp-resources",

  "extensions": [
	"dbaeumer.vscode-eslint",
	"esbenp.prettier-vscode",
	"bierner.markdown-preview-github-styles",
	"ms-vsliveshare.vsliveshare",
	"ms-vsliveshare.vsliveshare-pack",
	"ms-azuretools.vscode-docker",
	"peakchen90.open-html-in-browser",
	"coenraads.bracket-pair-colorizer-2",
	"mikestead.dotenv"
],

  "forwardPorts": [3000, 8000],

  "remoteUser": "node"
}
